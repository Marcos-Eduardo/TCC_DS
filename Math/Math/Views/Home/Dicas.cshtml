    <div class="container">
        <div class="row justify-content-md-center">
            <div class="col-md-10 align-center">
                <h1 class="mbr-section-title mbr-bold pb-3 mbr-fonts-style display-1">
                    <span style="font-weight: normal;">@Model.Conteudo.Titulo</span>
                </h1>
            </div>
        </div>
    </div>
</section>

<section class="mbr-section article content9 cid-sebkfJzJBe" id="content9-2a">
    <div class="container">
        <div class="inner-container" style="width: 100%;">
            <hr class="line" style="width: 25%;">
            <div class="section-text align-center mbr-fonts-style display-5">
                @Model.Conteudo.Descricao
            </div>
            <hr class="line" style="width: 25%;">
        </div>
    </div>
</section>

<section class="header1 cid-sebmw2LALK" id="header16-2c">
    <div class="container">
        <div class="row justify-content-md-center">
            <div class="col-md-10 align-center">
                <h1 class="mbr-section-title mbr-bold pb-3 mbr-fonts-style display-2">
                    <span style="font-weight: normal;">Dicas Cadastradas</span>
                </h1>
            </div>
        </div>
    </div>
</section>

<section class="features4 cid-sbX7VYG01Y" id="features4-22">
    <div class="container">
        <div class="row justify-content-center">
            @if (Model.Dicas.Count() == 0)
            {
                <section class="features11 cid-sfkwKFZOjW" id="features11-2k">
                    <div class="container">
                        <div class="col-md-12">
                            <div class="media-container-row">
                                <div class="mbr-figure m-auto" style="width: 50%;">
                                    <img src="~/fe/assets/images/sad-emoji.png" alt="" title="">
                                </div>
                                <div class=" align-left aside-content">
                                    <h2 class="mbr-title pt-2 mbr-fonts-style display-2">Dicas não Encontradas!</h2>
                                    <div class="mbr-section-text">
                                        <p class="mbr-text mb-5 pt-3 mbr-light mbr-fonts-style display-5">
                                            Até o momento esse conteúdo não possui nenhuma dica cadastrada, em breve haverá dicas disponíveis! Caso tenha uma sugestão clique em Sugerir Dica e nos ajude a compartilhar este conhecimento com milhões de brasileiros.
                                        </p>
                                        <div class="mbr-section-btn">
                                            <a class="btn btn-md btn-black display-4" asp-controller="Home" asp-action="Contato">Sugerir Dica</a>
                                            <button class="btn btn-md btn-black display-4 rounded-pill" onclick="window.history.back()">Página Anterior</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            }
            else
                @foreach (var item in Model.Dicas)
                {
                    <div class="card p-3 col-12 col-md-6 col-lg-4">
                        <div class="card-wrapper media-container-row media-container-row">
                            <div class="card-box">
                                <h4 class="card-title pb-3 mbr-fonts-style display-7">
                                    <a asp-controller="Home" asp-action="Dica" asp-route-id="@item.Id" class="text-black" style="">
                                        <strong>@item.Titulo</strong>
                                    </a>
                                </h4>
                                <p class="mbr-text mbr-fonts-style display-7">
                                    @(item.Descricao.Length > 100 ? string.Concat(item.Descricao.Substring(0, 100), "...") : item.Descricao)
                                </p>
                            </div>
                        </div>
                    </div>
                }
        </div>
    </div>
</section>