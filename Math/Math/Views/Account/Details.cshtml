@model UsuarioViewModel

@{
    ViewData["Title"] = "Detalhes do Usuário";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container">
    <div class="row text-center" style="background-color: #F39F0B">
        <div class="col-md-12" style="margin-top: 10px;">
            <h1>@ViewData["Title"]</h1>
        </div>
    </div>
</div>
<table class="table table-bordered">
    <tbody>
        <tr scope="row" class="d-flex">
            <th scope="col" class="col-md-2 text-center border-secondary table-dark">
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <td class="col-md-10">
                @Html.DisplayFor(model => model.Email)
            </td>
        </tr>
        <tr scope="row" class="d-flex">
            <th scope="col" class="col-md-2 text-center border-secondary table-dark">
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <td class="col-md-10">
                @Html.DisplayFor(model => model.Nome)
            </td>
        </tr>
        <tr scope="row" class="d-flex">
            <th class="col-md-2 text-center border-secondary table-dark">
                @Html.DisplayNameFor(model => model.Apelido)
            </th>
            <td class="col-md-10">
                @Html.DisplayFor(model => model.Apelido)
            </td>
        </tr>
        <tr scope="row" class="d-flex">
            <th class="col-md-2 text-center border-secondary table-dark">
                @Html.DisplayNameFor(model => model.DataNascimento)
            </th>
            <td class="col-md-10 d-flex">
                <span class="align-self-center">@Html.DisplayFor(model => model.DataNascimento)</span>
            </td>
        </tr>
        <tr scope="row" class="d-flex">
            <th class="col-md-2 text-center border-secondary table-dark">
                @Html.DisplayNameFor(model => model.Perfil)
            </th>
            <td class="col-md-10">
                @Html.DisplayFor(model => model.Perfil)
            </td>
        </tr>
        <tr scope="row" class="d-flex">
            <th class="col-md-2 text-center border-secondary table-dark d-flex">
                <span class="justify-content-center align-self-center mx-auto">Ações</span>
            </th>
            <td class="col-md-10">
                <div class="row offset-md-3">
                    <div class="col-md-4">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Editar</a>
                    </div>
                    <div class="col-md-4">
                        <a asp-action="Index" class="btn btn-secondary">Voltar</a>
                    </div>
                </div>
            </td>
        </tr>
    </tbody>
</table>
