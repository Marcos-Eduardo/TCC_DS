@model Nivel

@{
    ViewData["Title"] = "Excluir Nível";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container border">
    <div class="row text-center" style="background-color: #F39F0B">
        <div class="col-md-12" style="margin-top: 10px;">
            <h1>@ViewData["Title"]</h1>
        </div>
    </div>
    <div class="row text-center mt-md-5 mb-md-5">
        <div class="col">
            <h3 class="text-danger">Tem certeza que quer excluir esse Nível permanentemente?</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8 offset-2">
            <table class="table table-bordered">
                <thead class="thead-dark">
                    <tr class="d-flex">
                        <th scope="col" class="col-md-12">
                            @Html.DisplayNameFor(model => model.Nome)
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <tr scope="row" class="d-flex">
                        <td class="col-md-12">
                            @Html.DisplayFor(model => model.Nome)
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <div class="row mb-md-5">
        <div class="col-md-8 offset-2">
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Excluir" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-info">Cancelar</a>
            </form>
        </div>
    </div>
</div>
