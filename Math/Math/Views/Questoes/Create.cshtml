@model Questao

@{
    ViewData["Title"] = "Adicionar Questão";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container border">
    <div class="row text-center" style="background-color: #F39F0B">
        <div class="col-md-12" style="margin-top: 10px;">
            <h1>@ViewData["Title"]</h1>
        </div>
    </div>
    <div class="row mt-md-5 mb-md-5">
        <div class="col-md-6 offset-3">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Titulo" class="control-label"></label>
                    <input asp-for="Titulo" class="form-control" autofocus />
                    <span asp-validation-for="Titulo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Alternativa1" class="control-label"></label>
                    <input asp-for="Alternativa1" class="form-control" />
                    <span asp-validation-for="Alternativa1" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Alternativa2" class="control-label"></label>
                    <input asp-for="Alternativa2" class="form-control" />
                    <span asp-validation-for="Alternativa2" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Alternativa3" class="control-label"></label>
                    <input asp-for="Alternativa3" class="form-control" />
                    <span asp-validation-for="Alternativa3" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Alternativa4" class="control-label"></label>
                    <input asp-for="Alternativa4" class="form-control" />
                    <span asp-validation-for="Alternativa4" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Resposta" class="control-label"></label>
                    <input asp-for="Resposta" class="form-control" />
                    <span asp-validation-for="Resposta" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="QuizId" class="control-label"></label>
                    <select asp-for="QuizId" class="form-control" asp-items="ViewBag.QuizId"></select>
                </div>
                <div class="form-group d-inline-flex">
                    <input type="submit" value="Adicionar" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-danger">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
